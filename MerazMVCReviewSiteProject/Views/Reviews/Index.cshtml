@model IEnumerable<MerazMVCReviewSiteProject.Models.Review>

@{
    ViewBag.Title = "Reviews of Forgotten and Overlooked Technology";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@* Convert table to row and columns by deleting table components *@

@* Place foreach inside row to prevent footer wrapping to columns *@

<div class="row">

    @foreach (var item in Model)
    {

        <div class="col-sm-12 col-md-4">

            <div class="thumbnail">

                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p>@Html.DisplayFor(modelItem => item.ModelBrand)</p>
                    <p>@Html.DisplayFor(modelItem => item.Content)</p>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary" })</p>
                </div>
            </div>
        </div>
    }
</div>

